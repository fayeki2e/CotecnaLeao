@model IEnumerable<TechParvaLEAO.Areas.Reports.Models.UnapprovedAdvanceExpensesReportVm>

@{
    ViewData["Title"] = "Unapproved Advance and Expenses Report";
    var search = (TechParvaLEAO.Areas.Reports.Models.FinanceReportSearchVm)ViewData["Search"];
}

<h1>Unapproved Advance and Expenses Report</h1>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong>Report Filter</strong>
                <span data-toggle="tooltip" data-placement="top" data-original-title="click for Filter">
                    &nbsp;
                    <a class="btn btn-info btn-sm" data-toggle="collapse"
                       data-target="#filter-for-search"><i class="fa fa-angle-double-down"></i></a>
                </span>
            </div>
            <div class="card-body collapse" id="filter-for-search">
                <form class="form-horizontal" action="" method="get">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label" for="expenseClaim-from-date">Expense From</label>
                            <div class="col-md-9">
                                @Html.EditorFor(model => search.ExpenseFromDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label" for="expenseClaim-to-date">Expense To</label>
                            <div class="col-md-9">
                                @Html.EditorFor(model => search.ExpenseToDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label" for="name">Type</label>
                            <div class="col-md-9">
                                <select class="form-control" id="Status" name="Status">
                                    <option value="">-------</option>
                                    <option value="ADVANCE">Advance</option>
                                    <option value="REIMBURSEMENT">Expense</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Month)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PaymentRequestNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AdvancePaymentRequestNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Branch)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Currency)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SubmittedBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastApprovedBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @{if (Model.Count() == 0)
                    {
                        <tr><td>No Data Found</td></tr>
                    }
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.Month)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.PaymentRequestNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.AdvancePaymentRequestNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Branch)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.EmployeeCode)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.EmployeeName)
                        </td>
                        <td align="right">
                            @Html.DisplayFor(model => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Currency)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.SubmittedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.LastApprovedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
