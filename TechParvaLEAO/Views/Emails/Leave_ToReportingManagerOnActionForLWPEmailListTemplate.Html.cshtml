Content-Type: text/html; charset=utf-8
@{
    Layout = null;
}
@model TechParvaLEAO.Models.NotificationEmailViewModel
@using System.Globalization

Dear @Model.LeaveRequestData.ReportingManager,
<br />
<br />
The list of below mentioned employees have been marked as Leave Without Pay (LWP) by <br />
@Model.LeaveRequestData.CoordinatorName
<br />
<br />
<table border="1">
    <tr>
        <td>Sr. No.:</td>
        <td>Emp. Code:</td>
        <td>Name (Employee):</td>
        <td>From Date:</td>
        <td>To Date:</td>
        <td>Applied Date:</td>
    </tr>
    @foreach (var Item in Model.LeaveRequestData.LeaveRequestDetail)
    {
        <tr>
            <td>Item.Id</td>
            <td>Item.EmployeeCode</td>
            <td>Item.Employee</td>
            <td>Item.FromDate.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)</td>
            <td>Item.ToDate.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)</td>
            <td>Item.CreatdeDate.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)</td>
        </tr>
    }
</table>
<br />
<table width="100%" cellspacing="0" cellpadding="0">
    <tr>
        <td>
            <table cellspacing="0" cellpadding="0">
                <tr>
                    <td style="border-radius: 2px;" bgcolor="#228B22">
                        <a href="@Model.AcceptButtonUrl" target="_blank" style="padding: 8px 12px; border: 1px solid #ED2939;border-radius: 2px;font-family: Helvetica, Arial, sans-serif;font-size: 14px; color: #ffffff;text-decoration: none;font-weight:bold;display: inline-block;">
                            Accept
                        </a>
                    </td>
                    <td>&nbsp;</td>
                    <td style="border-radius: 2px;" bgcolor="#ED2939">
                        <a href="@Model.RejectButtonUrl" target="_blank" style="padding: 8px 12px; border: 1px solid #228B22;border-radius: 2px;font-family: Helvetica, Arial, sans-serif;font-size: 14px; color: #ffffff;text-decoration: none;font-weight:bold;display: inline-block;">
                            Reject
                        </a>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
<br />
    Best Regards