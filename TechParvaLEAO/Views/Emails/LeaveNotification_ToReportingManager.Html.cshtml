Content-Type: text/html; charset=utf-8
@{
    Layout = null;
}
@model TechParvaLEAO.Models.NotificationEmailViewModel
@using System.Globalization


Dear @Model.EmployeeDataList[0].Name   ,<br />
<br />

Following team member applied / on leave on same date. Please find the team member below.

    <table class="table table-responsive-sm table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Employee Code</th>
                                                <th>Employee Name</th>
                                                <th>Start Date</th>
                                                <th>End Date</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                     @foreach (var data in Model.obj_LeaveRequestModal)
                    {
                         <tr>
                            <td>@data.Employee.EmployeeCode</td>
                            <td>@data.Employee.Name</td>
                             <td>@data.StartDate.ToString().Substring(0, 10)</td>
                             <td>@data.EndDate.ToString().Substring(0, 10)</td>
                              <td>@data.Status</td>
                        </tr>
                    }
    </tbody>
 </table>

 

 
<br />
    Best Regards