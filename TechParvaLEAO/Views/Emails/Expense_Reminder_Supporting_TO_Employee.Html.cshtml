Content-Type: text/html; charset=utf-8
@{
    Layout = null;
}
@model TechParvaLEAO.Models.NotificationEmailViewModel
@using System.Globalization


Dear @Model.PaymentRequestDataList.First().Employee
<br />
Your expense claim supporting’s are not submitted to/ received by Finance
<br />
<table border="1">
    <tr>
        <td>Sr No:</td>
        <td>Expense Claim No.:</td>
        <td>Date of Claim:</td>
        <td>Date of Payment:</td>
        <td>Amount:</td>
        <td>Comment:</td>
    </tr>
    @foreach (var paymentRequest in Model.PaymentRequestDataList)
    {
        <tr>
            <td>@paymentRequest.Id</td>
            <td>@paymentRequest.RequestNumber</td>
            <td>@paymentRequest.CreatedDate.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)</td>
            <td>@paymentRequest.PostedOn.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)</td>
            <td>@paymentRequest.Currency  @paymentRequest.Amount</td>
            <td>@paymentRequest.Comment</td>
        </tr>
    }
</table>
<br />
Best Regards
