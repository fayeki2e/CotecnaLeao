    Layout = null;
}
@model TechParvaLEAO.Models.NotificationEmailViewModel
@using System.Globalization

Dear @Model.LeaveRequestData.Employee-@Model.LeaveRequestData.EmployeeCode,<br />
<br />
Your @Model.LeaveRequestData.CategoryType leave for the period @Model.LeaveRequestData.FromDate.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)
