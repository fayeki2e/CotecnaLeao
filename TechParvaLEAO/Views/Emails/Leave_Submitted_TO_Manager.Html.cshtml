Content-Type: text/html; charset=utf-8
@{
    Layout = null;
}
@model TechParvaLEAO.Models.NotificationEmailViewModel
@using System.Globalization


Dear @Model.LeaveRequestData.ReportingManager,
<br />
<br />
@Model.LeaveRequestData.Employee - @Model.LeaveRequestData.EmployeeCode, has requested for (@Model.LeaveRequestData.NumberOfDays Days) of (@Model.LeaveRequestData.LeaveType)
 leave for period @Model.LeaveRequestData.FromDate.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)
@if (@Model.LeaveRequestData.HalfDayStart)
{<span> (Half day Afternoon)</span>}
 to
@Model.LeaveRequestData.ToDate.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)
@if (Model.LeaveRequestData.HalfDayEnd)
{<span> (Half Day Morning)</span>}.<br />
Note that the leave will be auto-rejected if not addressed within 3 days of application.
<br />
<br />
<table border="1">
    <tr>
        <td>Leave Eligibility</td>
        <td>Leaves Availed:</td>
        <td>Leaves Pending:</td>
        <td>LWP days:</td>
        <td>Leave Nature</td>
        <td>Document Attached?</td>
    </tr>
    <tr>
        <td>@Model.LeaveRequestData.LeavesOpeningBalance</td>
        <td>@Model.LeaveRequestData.LeavesAvailed</td>
        <td>@Model.LeaveRequestData.LeavesPending</td>
        <td>@Model.LeaveRequestData.LWPDays</td>
        <td>@Model.LeaveRequestData.LeaveNature</td>
        <td>
            @if (Model.LeaveRequestData.DocumentPath == null)
            {
                <span>Not Attached</span>

            }
            else
            {
                <span>Attached</span>
            }

            </td>
    </tr>
</table>
<br />
<table width="100%" cellspacing="0" cellpadding="0">
    <tr>
        <td>
            <table cellspacing="0" cellpadding="0">
                <tr>
                    <td style="border-radius: 2px;" bgcolor="#228B22">
                        <a href="@Model.AcceptButtonUrl" target="_blank" style="padding: 8px 12px; border: 1px solid #ED2939;border-radius: 2px;font-family: Helvetica, Arial, sans-serif;font-size: 14px; color: #ffffff;text-decoration: none;font-weight:bold;display: inline-block;">
                            Accept
                        </a>
                    </td>
                    <td>&nbsp;</td>
                    <td style="border-radius: 2px;" bgcolor="#ED2939">
                        <a href="@Model.RejectButtonUrl" target="_blank" style="padding: 8px 12px; border: 1px solid #228B22;border-radius: 2px;font-family: Helvetica, Arial, sans-serif;font-size: 14px; color: #ffffff;text-decoration: none;font-weight:bold;display: inline-block;">
                            Reject
                        </a>
                    </td>
                    <td>&nbsp;</td>
                    <td style="border-radius: 2px;" bgcolor="#FFA500">
                        <a href="@Model.DetailButtonUrl" target="_blank" style="padding: 8px 12px; border: 1px solid #228B22;border-radius: 2px;font-family: Helvetica, Arial, sans-serif;font-size: 14px; color: #ffffff;text-decoration: none;font-weight:bold;display: inline-block;">
                            History
                        </a>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
<br />
Best Regards