@model TechParvaLEAO.Areas.Expense.Models.ViewModels.ForexSettlementViewModel
@{
    ViewBag.Title = "SupportingReceived";
}
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Forex Rate for Settlement</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.PaymentRequestId)
                <div class="form-group">
                    @Html.LabelFor(model => model.ForexRate, "Forex rate", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.ForexRate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ForexRate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-actions no-color">
                <input type="submit" value="Submit" class="btn btn-default" /> 
            </div>
        }
    </div>
