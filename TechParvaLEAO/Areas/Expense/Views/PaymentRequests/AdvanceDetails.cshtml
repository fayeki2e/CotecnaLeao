@model TechParvaLEAO.Areas.Expense.Models.PaymentRequest
@using TechParvaLEAO.Authorization
@using TechParvaLEAO.Areas.Expense.Models

@{
    ViewData["Title"] = "Advance Claim in Detail";
}

<div>
    <div class="float-left">
        <a class="navbar-brand" href="#">
            <img class="navbar-brand-full" src="~/img/cotecna.png" width="276" height="80"
                 alt="CotecnaUI Logo">
        </a>
    </div>
    <div class="float-right">
        <table class="table table-responsive-sm table-bordered table-striped table-sm">
            <tbody>
                <tr>
                    <td>Reference No.:</td>
                    <td>QMS-FR-FIN-COM-GEN-008-1.0</td>
                </tr>
                <tr>
                    <td>Effective date:</td>
                    <td>1st September 2020</td>
                </tr>
                <tr>
                    <td>Author & Administrator:</td>
                    <td>Lavita DSILVA</td>
                </tr>
                <tr>
                    <td>Approved By:</td>
                    <td>Anuja NESARIKAR</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="table-responsive">
    <h4 class="text-center">
        Advance Form
    </h4>
    <table class="table table-responsive-sm table-bordered table-striped table-sm">
        <tbody>
            <tr>
                <td>Branch</td>
                <td>@Html.DisplayFor(model => model.Location.Name)</td>
                <td>Comment</td>
                <td>@Html.DisplayFor(model => model.Comment)</td>
            </tr>
            <tr>
                <td>NAME</td>
                <td>@Html.DisplayFor(model => model.Employee.Name)</td>
                <td>Advance Amount</td>
                <td>@Html.DisplayFor(model => model.Currency.Name) @Html.DisplayFor(model => model.Amount)</td>
            </tr>
            <tr>
                <td>DESIGNATION</td>
                <td>@Html.DisplayFor(model => model.Employee.Designation.Name)</td>
                <td>Emp Code</td>
                <td>@Html.DisplayFor(model => model.Employee.EmployeeCode)</td>
            </tr>
            <tr>
                <td>BA/CM</td>
                <td>@Html.DisplayFor(model => model.BusinessActivity.Name) / @Html.DisplayFor(model => model.CustomerMarket.Name)</td>
                <td>Advance Request No.</td>
                <td>@Html.DisplayFor(model => model.RequestNumber)</td>
            </tr>
        </tbody>
    </table>

    <table class="table table-responsive-sm table-bordered table-striped table-sm">
        <tbody>
            <tr>
                <td colspan="2">SUBMITTED BY : </td>
                <td colspan="2">APPROVED  BY :</td>
            </tr>
            <tr>
                <td>NAME /SIGNATURE :</td>
                <td>@Html.DisplayFor(model => model.Employee.Name)-@Html.DisplayFor(model => model.Employee.EmployeeCode)</td>
                <td>NAME /SIGNATURE :</td>
                <td>
                    @if (
                     string.Equals(Model.Status, PaymentRequestStatus.APPROVED.ToString()) ||
                     string.Equals(Model.Status, PaymentRequestStatus.POSTED.ToString()) ||
                     string.Equals(Model.Status, PaymentRequestStatus.PAID.ToString())
                     )
                    {
                        @Html.DisplayFor(model => model.PaymentRequestActionedBy.Name) @Html.DisplayFor(model => model.PaymentRequestActionedBy.EmployeeCode)
                    }
                    else
                    {
                        <b>Not Approved</b>

                    }
                </td>
            </tr>
            <tr>
                <td>DATE :</td>
                <td>@Html.DisplayFor(model => model.PaymentRequestCreatedDate)</td>
                <td>DATE :</td>
                <td>@Html.DisplayFor(model => model.ActionDate)</td>
            </tr>
            <tr>
                <td>Data Submitted By :</td>
                <td>@Html.DisplayFor(model => model.PaymentRequestCreatedBy.Name)-@Html.DisplayFor(model => model.PaymentRequestCreatedBy.EmployeeCode)</td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>
<div class="btn btn-primary btn-sm d-print-none" onclick="window.print()">
    Print
</div>
