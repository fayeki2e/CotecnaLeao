@model IEnumerable<TechParvaLEAO.Areas.Organization.Models.Employee>
@using TechParvaLEAO.Authorization
@using TechParvaLEAO.Areas.Expense.Models
@{
    ViewBag.Title = "Finance Settlement List";
}
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Mvc.Common;
<div class="container-fluid">
    <div class="animated fadeIn">
        <partial name="_FinanceSettlementSearchInfo" />
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i>Employee Final Settlement
                        <span style="float: right">
                            <ul class="pagination">
                                <span data-toggle="tooltip" data-placement="top" data-original-title="Select All">
                                    <li class="btn btn-ghost btn-md">
                                        <input type="checkbox" name="paymentrequestId" style="zoom:1.5;" id="select-all">
                                    </li>
                                </span>
                                <li>&nbsp;</li>
                                <li>&nbsp;</li>
                                <li>&nbsp;</li>
                                <li>&nbsp;</li>
                                <li>&nbsp;</li>
                                <li>&nbsp;</li>
                                <li>&nbsp;</li>
                            </ul>
                        </span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-responsive-sm table-bordered table-striped table-sm">
                                <tr>
                                    <th rowspan="2">Employee Name</th>
                                    <th rowspan="2">Employee Code</th>
                                    <th rowspan="2">Designation</th>
                                    <th rowspan="2">Resignation Date</th>
                                    <th rowspan="2">Last Working Date</th>
                                    <th rowspan="2">Status</th>
                                    <th rowspan="2"></th>
                                    <th rowspan="2"></th>
                                    <th rowspan="2"></th>
                                </tr>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.EmployeeCode)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Designation.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ResignationDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.LastWorkingDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                        <td>
                                            <a href="/Expense/PaymentRequests/FinancePendingAdvanceList/?EmployeeCode=@item.EmployeeCode" target="_blank">
                                                Advances
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/Expense/PaymentRequests/FinancePendingExpenseList/?EmployeeCode=@item.EmployeeCode" target="_blank">
                                                Expenses
                                            </a>
                                        </td>
                                            <td>
                                                <a class="btn btn-success" 
                                                   btn-sm" href="/Expense/PaymentRequests/UpdateEmployeeSettlement/?id=@item.Id">
                                                    Settle
                                                </a>
                                            </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/js/common.js"></script>
}
