@model IEnumerable<TechParvaLEAO.Areas.Expense.Models.ExpenseHeadExpenseProfileMapping>
@{
    ViewData["Title"] = "Index";
}

<h1>Expense Head Expense Profile Mappings</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body" id="filter-for-search">
                <form class="form-horizontal" action="" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <!--**************Employee***********-->
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="expenseClaim-from-date">Expense Head</label>
                                <div class="col-md-9">
                                    @Html.DropDownList("ExpenseHeadId", null, "Search Expense Head", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessage("FromDate", "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="expenseClaim-from-date">Expense Profile</label>
                                <div class="col-md-9">
                                    @Html.DropDownList("ExpenseProfileId", null, "Search Expense Profile", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessage("FromDate", "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                        <div class="form-group row">
                            <div class="col-md-9">
                                <button class="btn btn-md btn-primary" type="submit">
                                    <i class="fa fa-dot-circle-o"></i> Search
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ExpenseHead)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ExpenseProfile)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Deactivated)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ExpenseHead.ExpenseHeadDesc) [@Html.DisplayFor(modelItem => item.ExpenseHead.AccountNumber)]
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ExpenseProfile.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Deactivated)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Deactive" asp-route-id="@item.Id">Deactive</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
