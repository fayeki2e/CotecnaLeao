@model IEnumerable<TechParvaLEAO.Areas.Expense.Models.BusinessActivityCustomerMarketMapping>

@{
    ViewData["Title"] = "Index";
}

<h1>Business Activity Customer Market Mapping List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body" id="filter-for-search">
                <form class="form-horizontal" action="" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="name">Business Activity</label>
                                <div class="col-md-9">
                                    @Html.DropDownList("BusinessActivityId", null, "Select", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessage("BusinessActivityId", "", new { @class = "text-danger" })
                                </div>
                            </div>
                           
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="name">Customer Market</label>
                                <div class="col-md-9">
                                    @Html.DropDownList("CustomerMarketId", null, "Select", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessage("CustomerMarketId", "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-9">
                                <button class="btn btn-md btn-primary" type="submit">
                                    <i class="fa fa-dot-circle-o"></i> Search
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BusinessActivity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerMarket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deactivated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessActivity.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerMarket.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deactivated)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Deactive" asp-route-id="@item.Id">Deactive</a>
            </td>
        </tr>
}
    </tbody>
</table>
