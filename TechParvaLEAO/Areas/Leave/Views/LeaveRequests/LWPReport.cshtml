@model IEnumerable<TechParvaLEAO.Areas.Leave.Models.LeaveRequest>
@{
    ViewBag.Title = "LWP Report";
}
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Mvc.Common;

@using TechParvaLEAO.Authorization
<div class="container-fluid">
    <div class="animated fadeIn">
        <partial name="_ReportSearch" />
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i>LWP Report
                    </div>
                    <div class="card-body">
                        

                        <div class="table-responsive">
                            <table class="table table-responsive-sm table-bordered table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th rowspan="2">Sr No.</th>
                                        <th rowspan="2">Employee Code</th>
                                        <th rowspan="2">Employee Name</th>
                                        <th rowspan="2">Leave Date</th>
                                        <th rowspan="2">No of days</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr></tr>
                                </tbody>
                            </table>
                        </div>
                        @Html.PagedListPager((IPagedList)Model, page => Url.Action((String)ViewData["PageLinkURL"],"PaymentRequests", new {area="Expense", id=page}), new PagedListRenderOptionsBase
                           {PageClasses = new string[] { "page-link" }, UlElementClasses = new string[] { "pagination" }, LiElementClasses = new string[] { "page-item" }, DisplayItemSliceAndTotal = false,
                           })
                    </div>
                    <div class="card-footer">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
