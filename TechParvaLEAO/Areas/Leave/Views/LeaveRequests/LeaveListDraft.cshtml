@model IEnumerable<TechParvaLEAO.Areas.Leave.Models.ViewModels.LeaveDraftListRow>
@using TechParvaLEAO.Authorization
@using TechParvaLEAO.Areas.Leave.Models
@{
    ViewBag.Title = "Index";
}   
<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i>Leave Drafts
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-responsive-sm table-bordered table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th rowspan="2">Employee Name</th>
                                        <th rowspan="2">Employee Code</th>
                                        <th rowspan="2">Start Date</th>
                                        <th rowspan="2">End Date</th>
                                        <th colspan="2"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LeaveDraft.Employee.Name)<br>
                                            @Html.DisplayFor(modelItem => item.LeaveDraft.Employee.Location.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LeaveDraft.Employee.EmployeeCode)<br>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ViewModel.StartDate)<br>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ViewModel.EndDate)<br>
                                        </td>
                                        <td>
                                            <a asp-action="RequestLeaveForm" asp-route-id="@item.LeaveDraft.Id">Proceed</a>
                                        </td>
                                        <td>
                                            <a asp-action="DeleteLeaveDraft" asp-route-id="@item.LeaveDraft.Id">Delete</a>
                                        </td>

                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer">
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
@section scripts{
    <script src="~/js/common.js"></script>
}
