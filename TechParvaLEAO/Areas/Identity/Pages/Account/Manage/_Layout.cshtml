<!DOCTYPE html>
<html lang="en">
<head>
    <base href="./">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta name="description" content="Leave Expense Attendance Overtime System">
    <link rel="icon" type="image/png" href="~/favicon.png">
    <title>Cotecna Leave Expense Attendance Overtime System</title>
    <link rel="stylesheet" href="~/lib/coreui/coreui/dist/css/coreui.min.css" />
    <link rel="stylesheet" href="~/lib/coreui/icons/css/coreui-icons.min.css" />
    <link rel="stylesheet" href="~/lib/flag-icon-css/css/flag-icon.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/lib/simple-line-icons/css/simple-line-icons.css" />
    <link rel="stylesheet" href="~/css/leave.css" />
    <link rel="stylesheet" href="~/css/style.css" />

    @RenderSection("Styles", false)

</head>
<body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show">
    <partial name="_Header" />
    <div class="app-body">

        <partial name="_MenuBar" />
        <main class="main">
            <!-- Breadcrumb-->
            <partial name="~/Views/Shared/_Breadcrumb.cshtml" />
            <div class="container-fluid">
                <div class="animated fadeIn">
                    <div class="card">
                        <div class="card-body">

                            <div class="">

                                <ul class="nav nav-pills flex-row justify-content-center">
                                    <li class="nav-item"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Profile</a></li>
                                    <li class="nav-item"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a></li>
                                </ul>
                            </div>
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>

        </main>
        <aside class="aside-menu">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#timeline" role="tab">
                        <i class="icon-list"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#messages" role="tab">
                        <i class="icon-speech"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#settings" role="tab">
                        <i class="icon-settings"></i>
                    </a>
                </li>
            </ul>

        </aside>
    </div>
    <partial name="_Footer" />
    <!-- CoreUI and necessary plugins-->

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/popper.js/dist/umd/popper.min.js"></script>
        <!--<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>-->
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/pace-progress/pace.min.js"></script>
        <script src="~/lib/perfect-scrollbar/dist/perfect-scrollbar.min.js"></script>
        <script src="~/lib/coreui/coreui/dist/js/coreui.min.js"></script>
        <script src="~/lib/luxon/luxon.min.js"></script>
        <script src="~/js/common_manager.js"></script>
        @RenderSection("scripts", required: false)

    </body>
</html>
