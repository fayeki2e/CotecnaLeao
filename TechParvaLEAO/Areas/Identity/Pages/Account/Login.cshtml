<body class="app flex-row align-items-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="card-group">
                        <div class="card p-4">
                            <div class="card-body">
                                <form id="account" method="post">
                                    <a class="navbar-brand" href="Login">
                                        <img class="navbar-brand-full" src="~/img/cotecna.png" width="260" height="60" alt="CotecnaUI Logo">

                                    </a>
                                    <p class="text-muted">Sign In to your account</p>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="icon-user"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Input.Email" class="form-control" type="text" placeholder="Username">
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="input-group mb-4">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="icon-lock"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password">
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                                    </div>
                                       <div class="row" style="text-align:center">
                                        <div class="col-12">
                                    <div class="input-group">
    <div class="input-group-prepend">
        <img id="img-captcha" src="~/get-captcha-image" />
    </div>
    <input type="text" class="form-control" placeholder="Captcha" asp-for="Input.CaptchaCode" maxlength="4" />
    <span asp-validation-for="Input.CaptchaCode" class="text-danger"></span>
</div>
</div></div>
<br />

