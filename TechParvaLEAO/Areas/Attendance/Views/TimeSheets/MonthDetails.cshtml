@model IEnumerable<TechParvaLEAO.Areas.Attendance.Models.TimeSheet>
@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong>December</strong> 2018
                    </div>
                    <div class="card-body">
                        <form class="form-horizontal" action="" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="table-responsive">
                                        <nav>
                                            <ul class="pagination">
                                                <li class="page-item">
                                                    <input class="form-control" type="text" id="monthly-timesheet">
                                                </li>
                                                <li>&nbsp;</li>
                                                <li>&nbsp;</li>
                                                <li>&nbsp;</li>
                                                <li class="page-item">
                                                    <a class="page-link disabled" href="#">search</a>
                                                </li>
                                            </ul>
                                        </nav>
                                        <table class="table table-responsive-sm table-bordered table-striped table-sm">

                                            <thead>
                                                <tr>
                                                    <th rowspan="2">SR</th>
                                                    <th rowspan="2">Week</th>
                                                    <th rowspan="2">Working Hrs</th>
                                                    <th rowspan="2">Overtime Hrs</th>
                                                    <th rowspan="2">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.StartDate) - @Html.DisplayFor(modelItem => item.EndDate)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.TotalWorkHours)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.OvertimeHours)</td>
                                                        <td>
                                                            @Html.ActionLink("View", "TimesheetDetail", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>

                                        <nav>
                                        </nav>
                                    </div>

                                </div>
                            </div>

                        </form>
                    </div>
                </div>
                <!-- /.col-->
            </div>
            <!-- /.row-->

        </div>
        <!-- /.row-->

    </div>
</div>



