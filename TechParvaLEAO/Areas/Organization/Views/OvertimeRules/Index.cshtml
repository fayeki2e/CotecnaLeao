@model IEnumerable<TechParvaLEAO.Areas.Organization.Models.OvertimeRule>

@{
    ViewData["Title"] = "Overtime Rules";
}

<h1>Overtime Rules</h1>

<p>
    <a asp-action="Create">Create New</a>

          <button onclick="exportData('overtime_data' ,'OvertimeRules')" class="btn btn-sm btn-info">
    <span class="fa fa-download"></span>
    Download Excel
</button>

</p>
<table class="table" id="overtime_data">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OvertimeMultiplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deactivated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OvertimeMultiplier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deactivated)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Deactive" asp-route-id="@item.Id">Deactivate</a>
            </td>
        </tr>
}
    </tbody>
</table>
