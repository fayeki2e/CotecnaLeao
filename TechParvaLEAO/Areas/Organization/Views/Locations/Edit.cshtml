@model TechParvaLEAO.Areas.Organization.Models.ViewModels.LocationViewModel
@using TechParvaLEAO.Areas.Organization.Models


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Location</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="masters_form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MondayWorkDayType" class="control-label"></label>
                @Html.DropDownListFor(Model => Model.MondayWorkDayType, new SelectList(Enum.GetValues(typeof(WorkDayType))), "select", htmlAttributes: new { @class = "form-control " })
            </div>
            <div class="form-group">
                <label asp-for="TuesdayWorkDayType" class="control-label"></label>
                @Html.DropDownListFor(Model => Model.TuesdayWorkDayType, new SelectList(Enum.GetValues(typeof(WorkDayType))), "select", htmlAttributes: new { @class = "form-control " })
            </div>
            <div class="form-group">
                <label asp-for="WednesdayWorkDayType" class="control-label"></label>
                @Html.DropDownListFor(Model => Model.WednesdayWorkDayType, new SelectList(Enum.GetValues(typeof(WorkDayType))), "select", htmlAttributes: new { @class = "form-control " })
            </div>
            <div class="form-group">
                <label asp-for="ThursdayWorkDayType" class="control-label"></label>
                @Html.DropDownListFor(Model => Model.ThursdayWorkDayType, new SelectList(Enum.GetValues(typeof(WorkDayType))), "select", htmlAttributes: new { @class = "form-control " })
            </div>
            <div class="form-group">
                <label asp-for="FridayWorkDayType " class="control-label"></label>
                @Html.DropDownListFor(Model => Model.FridayWorkDayType, new SelectList(Enum.GetValues(typeof(WorkDayType))), "select", htmlAttributes: new { @class = "form-control " })
            </div>
            <div class="form-group">
                <label asp-for="SaturdayWorkDayType " class="control-label"></label>
                @Html.DropDownListFor(Model => Model.SaturdayWorkDayType, new SelectList(Enum.GetValues(typeof(WorkDayType))), "select", htmlAttributes: new { @class = "form-control " })
            </div>
            <div class="form-group">
                <label asp-for="SundayWorkDayType" class="control-label"></label>
                @Html.DropDownListFor(Model => Model.SundayWorkDayType, new SelectList(Enum.GetValues(typeof(WorkDayType))), "select", htmlAttributes: new { @class = "form-control " })
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Deactivated" /> @Html.DisplayNameFor(model => model.Deactivated)
                </label>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section scripts {
    <script src="~/js/confirm_submit.js"></script>
}